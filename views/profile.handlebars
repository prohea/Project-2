<div class="flex flex-row flex-wrap w-screen m-8 place-content-center">
  <div class="w-full text-center border-2 border-black bg-red-500 text-white">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="flex flex-row place-content-center">
  <div class="border-slate-500 border-2 border-dashed w-2/5 mx-8 p-4">
    <h3 class="text-center font-bold">Create a New Listing</h3>

    <form class="form new-listing-form">
      <div class="form-group border-2 border-slate-500 m-2">
        <label for="listing-name"></label>
        <input
          placeholder="Listing name"
          class="form-input w-full"
          type="text"
          id="listing-name"
          name="listing-name"
        />
      </div>
      <div class="form-group border-2 border-slate-500 m-2">
        <label for="listing-category"></label>
        <select placeholder="Category"
          class="form-input w-full"
          type="text"
          id="listing-category"
          name="listing-category">
            <option value="DM seeking group">DM Seeking Group</option>
            <option value="Group seeking DM">Group Seeking DM</option>
            <option value="Group seeking players">Group Seeking Player(s)</option>
            <option value="Players seeking group">Player(s) Seeking Group</option>
        </select>
          
      </div>
      <div class="form-group border-2 border-slate-500 m-2">
        <label for="listing-desc"></label>
        <input
          placeholder="Description"
          class="form-input w-full"
          id="listing-desc"
          name="listing-desc"
        ></input>
      </div>
      <div class="form-group text-center">
        <button
          type="submit"
          class="border-2 border-black rounded bg-red-500 text-white w-1/2 login-button"
        >Create</button>
      </div>
    </form>
  </div>

  {{#if listings.length}}
    <div class="border-slate-500 border-dashed border-2 w-2/5 mx-8 p-4">
      <h3 class="text-center font-bold">Current Listings</h3>

      {{#each listings as |listing|}}
        <div>
          <div class="flex">
            <h4
              class="flex flex-row justify-between m-2 border-2 border-slate-500 w-full"
            ><a href= "/listing/{{listing.id}}">{{listing.name}}</a><button
                class="border-2 border-black rounded bg-red-500 text-white w-1/5 login-button listing-list"
                data-id="{{listing.id}}"
              >DELETE</button></h4>
          </div>
          <div class="text-center">
            {{!-- <button
              class="border-2 border-black rounded bg-red-500 text-white w-1/2 login-button"
              data-id="{{listing.id}}"
            >DELETE</button> --}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
